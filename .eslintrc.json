{
	"env": {
		"node": true,
		"es2021": true,
		"mocha": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "script"
	},
	"rules": {
		"prettier/prettier": "error",
		"no-console": "off",
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"prefer-const": "error",
		"no-var": "error"
	}
}
